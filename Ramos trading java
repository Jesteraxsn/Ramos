import java.util.Scanner;

public class RamosTrading {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("    Ramos Trading    ");
        System.out.println("    Location/Address: Nueva Valencia Guimaras    ");
        System.out.println("    Contact#: 09509169027    ");
        System.out.println("\n---RECIPIENTS---");

        System.out.print("Name : ");
        String name = scanner.nextLine();
        
        System.out.print("Address : ");
        String address = scanner.nextLine();
        
        System.out.print("Contact # : ");
        String contact = scanner.nextLine();
        
        System.out.print("Item : ");
        String shabu = scanner.nextLine();
        
        System.out.print("Quantity : ");
        String shabu2 = scanner.nextLine();
        
        System.out.print("Total Price : ");
        double shabu3 = scanner.nextDouble();
        scanner.nextLine(); // consume newline
        
        System.out.print("Item : ");
        String mariwana = scanner.nextLine();
        
        System.out.print("Quantity : ");
        String mariwana2 = scanner.nextLine();
        
        System.out.print("Total Price : ");
        double mariwana3 = scanner.nextDouble();
        scanner.nextLine(); // consume newline
        
        System.out.print("Item : ");
        String condom = scanner.nextLine();
        
        System.out.print("Quantity : ");
        String condom2 = scanner.nextLine();
        
        System.out.print("Total Price : ");
        double condom3 = scanner.nextDouble();
        scanner.nextLine(); // consume newline
        
        System.out.print("Pasar ayhan? : ");
