        double cash2 = (haha - cash);

        System.out.printf("%s :%.1f@Php%n", shabu, shabu3);
        System.out.printf("%s :%.1f@Php%n", mariwana, mariwana3);
        System.out.printf("%s :%.1f@Php%n", condom, condom3);
